<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Login</title>
<link href="{{ asset('/css/estilos.css') }}" rel="stylesheet" type="text/css">
<link href='http://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.13.1/jquery.validate.min.js"></script>
	<style>
		input:focus {outline: none; margin: 0;}
	</style>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
</head>

<body>
<div class="text-center" style="padding:50px 0; text-align: center">

	<div class="logo">Login</div>

	<!-- Main Form -->

	<div class="login-form-1">

		<form method="POST" id="login-form" class="text-left" action="{{ path('login') }}">

			<div class="login-form-main-message"></div>

			<div class="main-login-form">

				<div class="login-group" style="text-align: left;">

					<div class="form-group">

						<label for="lg_username" class="sr-only">Nombre de usuario</label>

						<input type="email" class="form-control" id="lg_username" name="_username" value="{{ lastuser }}">

					</div>

					<div class="form-group">

						<label for="lg_password" class="sr-only">Contraseña</label>

						<input type="password" class="form-control" id="lg_password" name="_password">

					</div>

					<div class="form-group login-group-checkbox">

						<input type="checkbox" id="lg_remember" name="lg_remember">

						<label for="lg_remember">Recordar</label>

					</div>
                    {% if error %}

					<div class="invalid-feedback" id="lg_error">

						<p style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</p>

					</div>
                    {% endif %}

				</div>

				<button type="submit" class="login-button"><i class="fa fa-chevron-right">ir</i></button>

			</div>

			<div class="etc-login-form">

				<p>¿Nuevo usuario? <a href="{{ url("registro") }}"><br>Crear una cuenta</a></p>

			</div>

		</form>

	</div>

	<!-- end:Main Form -->

</div>
</body>

</html>